# Server Configuration
NODE_ENV=production
PORT=3001
API_URL=http://localhost:3001

# Database Configuration (PostgreSQL)
# Format: postgres://user:password@host:port/database
DATABASE_URL=postgres://postgres:postgres@db:5432/qc_db

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# n8n Integration (Optional)
# Webhook URLs for automation
N8N_WEBHOOK_TASK_CREATED=http://n8n:5678/webhook/task-created
N8N_WEBHOOK_TASK_UPDATED=http://n8n:5678/webhook/task-updated
N8N_WEBHOOK_REPORT=http://n8n:5678/webhook/generate-report

# Security (JWT Secrets - Change these in production!)
JWT_SECRET=replace_with_secure_random_string_in_production
