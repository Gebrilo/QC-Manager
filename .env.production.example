# =============================================================================
# QC Management Tool - Production Environment Configuration
# =============================================================================
# Copy this file to .env and update ALL values before deploying.
# Generate secure passwords with: openssl rand -hex 24
# =============================================================================

# -----------------------------------------------------------------------------
# APP DATABASE (used by the API service)
# -----------------------------------------------------------------------------
POSTGRES_USER=qc_admin
POSTGRES_PASSWORD=CHANGE_ME_use_openssl_rand_hex_24
POSTGRES_DB=qc_app

# -----------------------------------------------------------------------------
# N8N DATABASE (completely isolated from app database)
# -----------------------------------------------------------------------------
N8N_POSTGRES_USER=n8n_admin
N8N_POSTGRES_PASSWORD=CHANGE_ME_use_openssl_rand_hex_24
N8N_POSTGRES_DB=n8n_db

# -----------------------------------------------------------------------------
# API
# -----------------------------------------------------------------------------
# JWT signing secret (min 32 chars). Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_generate_random_64_char_hex_string

# -----------------------------------------------------------------------------
# N8N WORKFLOW AUTOMATION
# -----------------------------------------------------------------------------
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_strong_n8n_password

# Webhook URL: how n8n is reachable from outside (for webhook triggers)
# Use your VPS IP or domain, e.g. http://YOUR_VPS_IP:5678
N8N_WEBHOOK_URL=http://YOUR_VPS_IP:5678

# -----------------------------------------------------------------------------
# DOCKER HUB (for CI/CD image pull)
# -----------------------------------------------------------------------------
DOCKER_HUB_USERNAME=your_dockerhub_username
