# =============================================================================
# QC Management Tool - Staging Environment Variables
# =============================================================================
# Copy this file to .env.staging and fill in all values.
# DO NOT commit .env.staging to version control.
# =============================================================================

# === Docker Hub ===
DOCKER_HUB_USERNAME=

# === Domains (used by Traefik labels) ===
WEB_DOMAIN=staging.gerbil.qc
API_DOMAIN=staging-api.gerbil.qc

# === Database ===
POSTGRES_USER=qc_staging_admin
POSTGRES_PASSWORD=
POSTGRES_DB=qc_staging_app

# === Application ===
JWT_SECRET=
NODE_ENV=production
CORS_ORIGIN=https://staging.gerbil.qc

# === External n8n (running in separate compose, reachable via qc-shared-network) ===
N8N_WEBHOOK_URL=http://n8n:5678/webhook

# === Backups ===
BACKUP_PATH=./backups-staging
BACKUP_RETENTION_DAYS=3